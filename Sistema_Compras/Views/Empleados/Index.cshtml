@model IEnumerable<Sistema_Compras.Empleados>

@{
    ViewBag.Title = "Index";
}

<h2>Empleados</h2>


<p>
    @Html.ActionLink("Crear empleado", "Create")
</p>

<div class="row">
    <form class="form-inline my-2 my-lg-0 col-10" method="get">
        <input class="form-control mr-sm-2" type="text" placeholder="filtrar" id="Criterio" name="Criterio" />
        <input class="btn btn-secondary my-2 my-sm-0" type="submit" id="cmdBuscar" value="Buscar" />
    </form>
    @* La barra de busqueda Fin *@
    <p class="btn btn-outline-warning col-2">@Html.ActionLink("Exportar a Excel", "exportaExcel")</p>
</div>

    @* La barra de busqueda Fin *@

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamentos.Nombre) Departamento
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamentos.Nombre)
            </td>
            <td>
                <button type="button" class="btn btn-outline-success">@Html.ActionLink("Editar", "Edit", new { id = item.IdEmp })</button>
                <button type="button" class="btn btn-outline-warning">@Html.ActionLink("Detalles", "Details", new { id = item.IdEmp })</button>
                <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Borrar", "Delete", new { id = item.IdEmp })</button>
            </td>
        </tr>
    }

</table>
