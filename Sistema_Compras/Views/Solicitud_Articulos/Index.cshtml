@model IEnumerable<Sistema_Compras.Solicitud_Articulos>

@{
    ViewBag.Title = "Index";
}

<h2>Solicitud de Articulos para venta o despacho</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")
</p>

<div class="row">
    <form class="form-inline my-2 my-lg-0 col-10" method="get">
        <input class="form-control mr-sm-2" type="text" placeholder="filtrar" id="Criterio" name="Criterio" />
        <input class="btn btn-secondary my-2 my-sm-0" type="submit" id="cmdBuscar" value="Buscar" />
    </form>
    @* La barra de busqueda Fin *@
    <p class="btn btn-outline-warning col-2">@Html.ActionLink("Exportar a Excel", "exportaExcel")</p>
</div>


<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Solicitud)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articulos.Articulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleados.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medidas.Unidad_de_Medida)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Solicitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Articulos.Articulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleados.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medidas.Unidad_de_Medida)
            </td>
            <td>
                <button type="button" class="btn btn-outline-success">@Html.ActionLink("Editar", "Edit", new { id = item.IdSol })</button>
                <button type="button" class="btn btn-outline-warning">@Html.ActionLink("Detalles", "Details", new { id = item.IdSol })</button>
                <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Borrar", "Delete", new { id = item.IdSol })</button>

            </td>
        </tr>
    }

</table>
