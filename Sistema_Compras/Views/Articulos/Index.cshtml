@model IEnumerable<Sistema_Compras.Articulos>

@{
    ViewBag.Title = "Index";
}

<h2>Articulos</h2>

<p>
    @Html.ActionLink("Crear articulo", "Create")
</p>

@* La barra de busqueda Inicia *@
<form class="form-inline active-pink-3 active-pink-4" method="get">
    <input class="form-control form-control-sm ml-3 w-75" type="text" id="Criterio" name="Criterio" />
    <input class="btn btn-info" type="submit" id="cmdBuscar" value="Buscar" />
</form>
@* La barra de busqueda Fin *@

<table class="table table-striped table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Articulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Existencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marcas.Nombre) Marca
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medidas.Unidad_de_Medida)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Articulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marcas.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medidas.Unidad_de_Medida)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdArt }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IdArt }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.IdArt })
            </td>
        </tr>
    }

</table>
