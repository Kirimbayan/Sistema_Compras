@model IEnumerable<Sistema_Compras.Articulos>

@{
    ViewBag.Title = "Index";
}

<h2>Articulos</h2>

<p>
    @Html.ActionLink("Crear articulo", "Create")
</p>

@* La barra de busqueda Inicia *@

<div class="row">
    <form class="form-inline my-2 my-lg-0 col-10" method="get">
        <input class="form-control mr-sm-2" type="text" placeholder="filtrar" id="Criterio" name="Criterio" />
        <input class="btn btn-secondary my-2 my-sm-0" type="submit" id="cmdBuscar" value="Buscar" />
    </form>
    @* La barra de busqueda Fin *@
    <p class="btn btn-outline-warning col-2">@Html.ActionLink("Exportar a Excel", "exportaExcel")</p>
</div>



<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Articulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Existencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marcas.Nombre) Marca
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medidas.Unidad_de_Medida)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Articulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Existencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marcas.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medidas.Unidad_de_Medida)
            </td>
            <td>
                <button type="button" class="btn btn-outline-success">@Html.ActionLink("Editar", "Edit", new { id = item.IdArt })</button>
                <button type="button" class="btn btn-outline-warning">@Html.ActionLink("Detalles", "Details", new { id = item.IdArt })</button>
                <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Borrar", "Delete", new { id = item.IdArt })</button>
            </td>
        </tr>
    }

</table>

